# Run Fastfetch
if command -v fastfetch &> /dev/null; then
  fastfetch
fi


# Load zsh_aliases 
if [ -f ~/.config/zsh/zsh_aliases ]; then
  source ~/.config/zsh/zsh_aliases
fi


# Load Keybindings
if [ -f ~/.config/zsh/zsh_keybinds ]; then
  source ~/.config/zsh/zsh_keybinds
fi


# Set the dir we want to store zinit and plugins
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"

# If Zinit is not installed, then install it.
if [ ! -d "$ZINIT_HOME" ]; then
  mkdir -p "$(dirname $ZINIT_HOME)"
  git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi


# Shell integrations
source "${ZINIT_HOME}/zinit.zsh"
eval "$(oh-my-posh init zsh --config $HOME/.config/ohmyposh/config.toml)"
eval "$(zoxide init --cmd cd zsh)"
eval "$(fzf --zsh)"


# Load zsh plugins with Zinit
zinit light Aloxaf/fzf-tab
zinit load zsh-users/zsh-syntax-highlighting
zinit load zsh-users/zsh-autosuggestions
zinit light zsh-users/zsh-completions
autoload -U compinit && compinit


# Completion Styling
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Za-Z}'
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"
zstyle ':completion:*' menu no
zstyle ':fzf-tab:complete:cd:*' fzf-preview 'ls --color $realpath'


# History
HISTFILE=~/.config/zsh/zsh_history
HISTSIZE=500
SAVEHIST=$HISTSIZE
HISTDUP=erase
setopt appendhistory
setopt sharehistory
setopt hist_ignore_space
setopt hist_ignore_all_dups
setopt hist_save_no_dups
setopt hist_ignore_dups
setopt hist_find_no_dups


# PATHs
#
# Asdf
. ~/.config/asdf/asdf.sh

# Load Angular CLI autocompletion.
source <(ng completion script)

#THIS MUST BE AT THE END OF THE FILE FOR SDKMAN TO WORK!!!
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"

[[ -s "/home/ernst/.gvm/scripts/gvm" ]] && source "/home/ernst/.gvm/scripts/gvm"
